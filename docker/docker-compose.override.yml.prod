services:
  acme-companion:
    image: nginxproxy/acme-companion
    container_name: protectapp-acme-companion
    restart: unless-stopped
    depends_on:
      - nginx-proxy
    volumes_from:
      - nginx-proxy
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock:ro
    environment:
      DEFAULT_EMAIL: ${LETSENCRYPT_EMAIL}
    networks:
      - protectapp-net

volumes:
  protectapp_acme:
